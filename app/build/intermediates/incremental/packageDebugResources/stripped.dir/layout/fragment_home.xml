<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.home.home.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textSize="28sp"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:text="Welcome to Berempah Riyah, enjoy in this aplications" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="12dp"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:text="Video Rekomendasi" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_yt_list_home"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:listitem="@layout/item_yt_list_home"/>

        <TextView
            android:id="@+id/tv_title_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="12dp"
            android:text="Matematika Dasar"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_game_list_home"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:listitem="@layout/item_game_list_home" />

        <TextView
            android:id="@+id/tv_title_materi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp"
            android:paddingHorizontal="12dp"
            android:paddingTop="12dp"
            android:text="Materi"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_materi_home"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="8dp"
            tools:listitem="@layout/item_list_materi_home" />

    </LinearLayout>
</ScrollView>