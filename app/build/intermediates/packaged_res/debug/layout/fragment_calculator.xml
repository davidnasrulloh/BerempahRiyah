<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.calculator.CalculatorFragment"
    android:layout_gravity="fill"
    android:layout_marginHorizontal="16dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@color/gray"
        android:id="@+id/etShowNumber"
        android:text="0"
        android:layout_marginVertical="16dp"
        android:gravity="right|bottom"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_height="150dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|fill"
        android:gravity="bottom|start|fill">

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:text="AC"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buAC"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="+/-"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buPlusMinus"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="%"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buPer"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="รท"
                android:background="@color/buop"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buDiv"
                android:layout_weight="1"
                android:textSize="18sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:text="7"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bu7"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="8"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bu8"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="9"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bu9"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="X"
                android:background="@color/buop"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buMul"
                android:layout_weight="1"
                android:textSize="18sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:text="4"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bu4"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="5"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bu5"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="6"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bu6"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="-"
                android:background="@color/buop"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buSub"
                android:layout_weight="1"
                android:textSize="18sp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:text="1"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bu1"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="2"
                android:background="@color/whiteback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bu2"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="3"
                android:background="@color/whiteback"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:id="@+id/bu3"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>
            <Button
                android:text="+"
                android:background="@color/buop"
                android:textColor="@color/white"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:id="@+id/buSum"
                android:layout_weight="1"
                android:textSize="18sp"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:baselineAligned="true">
        <Button
            android:text="0"
            android:background="@color/whiteback"
            android:layout_height="30pt"
            android:id="@+id/bu0"
            android:layout_width="0dp"
            android:layout_weight="4.01"
            android:textSize="18sp"
            android:layout_marginRight="8dp"/>
        <Button
            android:text="."
            android:background="@color/whiteback"
            android:layout_height="30pt"
            android:id="@+id/buDot"
            android:layout_width="0dp"
            android:layout_weight="1.92"
            android:textSize="18sp"
            android:layout_marginRight="8dp"/>
        <Button
            android:text="="
            android:background="@color/buop"
            android:textColor="@color/white"
            android:layout_height="30pt"
            android:id="@+id/buEq"
            android:layout_weight="1.92"
            android:layout_width="0dp"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>